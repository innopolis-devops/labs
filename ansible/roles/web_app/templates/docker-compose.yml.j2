version: "3.9"

services:
  {{ web_app_name }}:
    image: {{ registry }}/{{ image }}:{{ image_tag }}
    container_name: {{ web_app_name }}
    ports:
      - "{{ web_app_port.external }}:{{ web_app_port.internal }}"
    restart: always

    volumes:
      - {{ app.name }}-data:/app/data

volumes:
  {{ app.name }}-data: