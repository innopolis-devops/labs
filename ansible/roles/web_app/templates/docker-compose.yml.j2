version: "3.0"
services:
    {{web_app_name}}:
        image: "{{web_app.registry}}/{{web_app.image}}:{{web_app.tag}}"
        container_name: {{ web_app_name }}
        ports:
         - "{{web_app.external_port}}:{{web_app.port}}"
         restart: always
         volumes:
      - {{ app.name }}-data:/app/data

volumes:
  {{ app.name }}-data: